{% extends "::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}{{ 'resetting.email.subject'|trans }} - {{ parent() }}{% endblock %}

{% block flash %}
    {{ parent() }}
    <div class="flash-msg success">
        <div class="close">&times;</div>
        {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
    </div>
{% endblock %}

{% block body %}
    <div class="center">
        <a href="{{ path('fos_user_security_login') }}" class="button round small-12 large-3">{{ 'layout.login'|trans }}</a>
    </div>
{% endblock %}
